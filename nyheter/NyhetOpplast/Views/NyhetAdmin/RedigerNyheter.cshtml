@model List<Models.Nyhet>
@{
    ViewBag.Title = "Rediger nyheter";
}
@if (TempData["msg"] != null)
{
    <div class="alert-info text-center" id="alert">
        <h4>
            @TempData["msg"]
        </h4>
    </div>
}

<h2>@ViewBag.Title.</h2>
@if (Model.Count > 0)
{
    <table class="table table-striped">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Tittel</td>
                <td>@item.Tekst</td>
                <td>
                    <a href="/admin/LagNyNyhet?id=@item.Id">Rediger</a>
                    <a class="adelete" href="/admin/SlettNyhet?id=@item.Id">Slett</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h4>Ingen nyheter opprettet enda</h4>
}

@section Scripts {
    <script>
        $(function () {
            var alert = $('#alert');
            if (alert.length)
                setTimeout(function () { alert.hide(); }, 4000);
        });
    </script>
}