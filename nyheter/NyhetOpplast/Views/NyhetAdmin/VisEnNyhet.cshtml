@model Models.Nyhet
@{
    ViewBag.Title = "VisEnNyhet";
    var base64 = Convert.ToBase64String(Model.BildeSrc);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
}
<div class="row">
    <div class="col-md-12">
        <h3>@Model.Tittel</h3>
    </div>
    <div class="col-md-12">
        (Publisert:@Model.DatoPostet)
    </div>
    <div class="col-md-12">
        <img src="@imgSrc" alt="image" style="width:400px" />
    </div>
    <div class="col-md-12">
        @Model.Tekst
    </div>
    @Html.ActionLink("Tilbake", "VisAlleNyheter")
</div>


